<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('partials/head.ejs')%>
    <title>Document</title>
</head>
<body>
    <%-include('partials/header.ejs')%>
    <div class="container">
        <div class="main">
            <div class="categories">
                <h3>Жанры</h3>
                <% genres.forEach(genre => { %>
                    <a href="/<%=genre.key%>"> <%= genre.name %> </a>
                <% }) %>
            </div>
            <div class="main-content">
                <h3>фильмы и сериалы</h3>
                <div class="main-card">
                    <div class="card-left">
                        <div class="film-img">
                            <img src="/images/films/film.webp" alt="">
                        </div>
                        <div class="film-info">
                            <a href="">Все, везде и сразу</a>
                            <a href="">Ever ot once, 2001, 139min</a>
                            <a href="США, Фантастика"></a>
                            <button class="film-btn">
                                <img src="/images/icons/play.svg" alt="">
                                Play
                            </button>
                        </div>
                    </div>
                    <div class="card-right">
                        <div class="film-rate">
                            <p>7/3</p>
                        </div>
                        <button class="film-btn">
                            <img src="/images/icons/checkbox.svg" alt="">
                            Буду смотреть
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>